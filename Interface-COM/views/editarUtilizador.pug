extends layout

block content
    .w3-container(style="height:100%;background-color:#36393e")
        .w3-row 
            h1 Editar Utilizador
        .w3-row
            form.w3-container(method="POST" action="/utilizador/editar")
                fieldset
                    legend Registo
                    label Nº Sócio
                    input.w3-input.w3-round(type="text" name="nSocio" value=utilizador.nSocio)
                    label Nome Completo
                    input.w3-input.w3-round(type="text" name="nome" value=utilizador.nome)
                    label Username
                    input.w3-input.w3-round(type="text" name="username" value=utilizador.username)
                    label Password
                    input.w3-input.w3-round(type="password" name="password" value=utilizador.password)
                    label Data de Nascimento
                    input.w3-input.w3-round(type="date" name="dataNacimento" value=utilizador.dataNacimento)
                    label Idade
                    input.w3-input.w3-round(type="text" name="idade" value=utilizador.idade)
                    
                    label Sexo
                    select(name="sexo")
                        if utilizador.sexo == "M"
                            option(value="M" selected) M 
                        else 
                            option(value="M") M 
                        if utilizador.sexo == "F"
                            option(value="F" selected) F 
                        else 
                            option(value="f") f 
                        if utilizador.sexo == "Outro"
                            option(value="Outro" selected) Outro 
                        else 
                            option(value="Outro") Outro
                    br

                    if nivelAcesso == "diretor"
                        label Nível
                        select(name="nivel")
                            if utilizador.nivel == "socio"
                                option(value="socio" selected) socio 
                            else
                                option(value="socio") socio 
                            if utilizador.nivel == "diretor"
                                option(value="diretor" selected) diretor 
                            else
                                option(value="socio") diretor 
                    br
                    label CC
                    input.w3-input.w3-round(type="text" name="cc" value=utilizador.cc)
                    label E-mail
                    input.w3-input.w3-round(type="email" name="email" value=utilizador.email)
                    label Telefone Fixo
                    input.w3-input.w3-round(type="text" name="telFixo" value=utilizador.telFixo)
                    label Nº FPO
                    input.w3-input.w3-round(type="text" name="nFPO" value=utilizador.nFPO)
                    label Telemóvel
                    input.w3-input.w3-round(type="text" name="telMovel" value=utilizador.telMovel)
                    label Morada
                    input.w3-input.w3-round(type="text" name="morada" value=utilizador.morada)
                    input.w3-input.w3-round(type="hidden" name="_id" value=utilizador._id)
                br
                .w3-row(style="width:100%") 
                    .w3-half.w3-container
                        if nivelAcesso == "diretor"
                            a(href="/utilizador/" style="text-decoration:none;width:100%").w3-btn.w3-white.w3-margin-right Cancelar
                        else
                            a(href="/utilizador/perfil"  style="text-decoration:none;width:100%").w3-btn.w3-white.w3-margin-right Cancelar
                    .w3-half.w3-container
                        button.w3-btn.w3.w3-deep-orange.w3-margin-right(style="width:100%" type="submit") Atualizar