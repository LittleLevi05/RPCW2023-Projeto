extends layout

block content
    .w3-container(style="background-color:#36393e")
        .w3-row
            .w3-col.m3
                h1
            .w3-col.m6.w3-container
                h1 Editar Inscrito
            .w3-col.m3
                h1
        .w3-row
            .w3-col.m3
                h1
            .w3-col.m6.w3-container
                form.w3-container(method="POST" action="/inscrito/editar")
                    fieldset#transporte
                        input(type="hidden" name="codEvento" value=inscrito.codEvento)
                        input(type="hidden" name="_id" value=inscrito._id)
                        legend Inscrito
                        .w3-row
                            label Nº Sócio
                        .w3-row
                            input.w3-input.w3-round(type="text", name="userID", value=inscrito.userID)
                        .w3-row
                            label Despesa adicional
                        .w3-row
                            input.w3-input.w3-round(type="number", name="despesaExtra", min="0", step="0.01", value=inscrito.despesaExtra)
                        .w3-row
                            label Descrição adicional
                        .w3-row.w3-padding-16
                            input.w3-input.w3-round(type="text", name="descricao", value=inscrito.descricao)

                    .w3-row.w3-container.w3-padding-16
                        button.w3-btn.w3.w3-deep-orange(style="width:100%" type="submit") Adicionar
    .w3-col.m3
                h1