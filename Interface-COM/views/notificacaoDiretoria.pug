extends layout

block content
    .w3-container(style="background-color:#36393e")
        .w3-row 
            .w3-half.w3-container
                h1 Adicionar Notificação
                form.w3-container(method="POST" action="/notificacao/adicionar")
                    fieldset
                        legend Notificação
                        input.w3-input.w3-round(type="text" name="titulo" placeholder="título" style="background-color:#282b30;color:white;border:none")
                        input.w3-input.w3-round(type="text" name="mensagem" placeholder="mensagem" style="background-color:#282b30;color:white;border:none;margin-top:6px")
                    
                    br
                    button.w3-btn.w3.w3-deep-orange.w3-margin-right(style="width:100%" type="submit") Criar Notificação
            .w3-half.w3-container
                h1 Notificações
                form(method="POST" action="/notificacao/filtro" style="width:100%;height:100%;margin-right:6px")
                    fieldset
                        legend Ordenação
                        span(style="display:flex;flex-direction:row;margin-top:6px")
                            select.w3-select(name="campo" style="background-color:#424549;;border:none;color:white")
                                option(value="data") Data
                            select.w3-select(name="ordem" style="background-color:#424549;margin-left:6px;border:none;color:white")
                                option(value="asc") Ascendente
                                option(value="desc") Descendente
                        span(style="display:flex;flex-direction:row;margin-top:9px")
                            a.w3-btn.w3.w3-white.w3-margin-right(href="/notificacao" style="width:100%" type="submit") #[i.fas.fa-eraser] Limpar
                            button.w3-btn.w3.w3-white.w3-margin-right(style="width:100%" type="submit") #[i.fas.fa-filter] Aplicar
                br
                table.w3-table(style="background-color:#424549")
                    tr.w3-black 
                        th Título 
                        th Data
                        th
                        th
                    
                    each notificacao in notificacoes
                        tr.w3-hover-deep-orange
                            td #[a(href="/notificacao/"+notificacao._id style="text-decoration:none") #{notificacao.titulo}]
                            td #{notificacao.data.substring(0,10)} 
                            td
                                button.w3-btn.w3-red.w3-margin-right  
                                    a(href="/notificacao/remover/"+notificacao._id style="text-decoration:none") Remover 
                            td 
                                button.w3-btn.w3-blue.w3-margin-right  
                                    a(href="/notificacao/editar/"+notificacao._id style="text-decoration:none") Editar