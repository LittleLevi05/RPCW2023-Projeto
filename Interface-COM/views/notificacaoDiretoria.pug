extends layout

block content
    .w3-container(style="background-color:#36393e")
        .w3-row 
            .w3-half.w3-container
                h1 Adicionar Notificação
                form.w3-container(method="POST" action="/notificacao/adicionar")
                    fieldset
                        legend Notificação
                        label Título
                        input.w3-input.w3-round(type="text" name="titulo")
                        label Mensagem
                        input.w3-input.w3-round(type="text" name="mensagem")
                    
                    br
                    button.w3-btn.w3.w3-deep-orange.w3-margin-right(style="width:100%" type="submit") Criar Notificação
            .w3-half.w3-container
                h1 Notificações
                table.w3-table(style="background-color:#424549")
                    tr.w3-black 
                        th Título 
                        th Mensagem
                        th
                        th
                    
                    each notificacao in notificacoes
                        tr.w3-hover-deep-orange
                            td #[a(href="/notificacao/"+notificacao._id style="text-decoration:none") #{notificacao.titulo}]
                            td #{notificacao.mensagem.substring(0,14)} ...
                            td
                                button.w3-btn.w3-red.w3-margin-right  
                                    a(href="/notificacao/remover/"+notificacao._id style="text-decoration:none") Remover 
                            td 
                                button.w3-btn.w3-blue.w3-margin-right  
                                    a(href="/notificacao/editar/"+notificacao._id style="text-decoration:none") Editar